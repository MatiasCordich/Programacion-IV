@model Containers.WEB.Models.ContainerModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ContainerModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="model.DescripcionContainer" class="control-label"></label>
                <input asp-for="model.DescripcionContainer" class="form-control" />
                <span asp-validation-for="model.DescripcionContainer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="model.IdEstadoContainer" class="control-label"></label>
                @Html.DropDownListFor(m => m.model.IdEstadoContainer, Model.ListaEstadosItem, "Seleccione un estado", new { @class = "form-control" })
                <span asp-validation-for="model.IdEstadoContainer" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
